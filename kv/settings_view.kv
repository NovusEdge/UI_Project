<SettingsListItem>
    MDListItemLeadingIcon:
        icon: root.icon
    
    MDListItemHeadlineText:
        text: root.text

<SettingsScreen>:
    name: 'Settings'
    MDTopAppBar:
        title: "Settings"
        left_action_items: [["menu", lambda x: app.on_menu()]]
        elevation: 10

    ScrollView:
        MDList:
            id: settings_list
            SettingsListItem:
                text: "Accessibility"
                icon: "account"

            SettingsListItem:
                text: "Privacy and Security"
                icon: "shield"

            SettingsListItem:
                text: "App Settings"
                icon: "cog"

            SettingsListItem:
                text: "Notifications"
                icon: "bell"