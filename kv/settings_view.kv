<SettingsListItem>
    MDListItemLeadingIcon:
        icon: root.icon
    
    MDListItemHeadlineText:
        text: root.text

<SettingsScreen>:
    name: 'Settings'
    MDFloatLayout:
        orientation: "vertical"
        md_bg_color: app.theme_cls.primaryColor

        BaseMDTopAppBar:
            screen_name: 'Settings'

        ScrollView:
            MDList:
                id: settings_list
                SettingsListItem:
                    text: "Accessibility"
                    icon: "account"

                SettingsListItem:
                    text: "Privacy and Security"
                    icon: "shield"

                SettingsListItem:
                    text: "App Settings"
                    icon: "cog"

                SettingsListItem:
                    text: "Notifications"
                    icon: "bell"
