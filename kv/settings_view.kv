<SettingsListItem>
    MDNavigationItemIcon:
        icon: root.icon

    MDNavigationItemLabel:
        text: root.text

<SettingsScreen>:
    name: 'Settings'
    MDTopAppBar:
        title: "Settings"
        md_bg_color: app.theme_cls.primary_color
        left_action_items: [["menu", lambda x: app.on_menu()]]
        elevation: 10

    ScrollView:
        MDList:
            id: settings_list
            OneLineAvatarListItem:
                text: "Accessibility"
                ImageLeftWidget:
                    source: "accessibility.png"

            OneLineAvatarListItem:
                text: "Privacy and Security"
                ImageLeftWidget:
                    source: "privacy.png"

            OneLineAvatarListItem:
                text: "App Settings"
                ImageLeftWidget:
                    source: "cog.png"

            OneLineAvatarListItem:
                text: "Notifications"
                ImageLeftWidget:
                    source: "notifications.png"