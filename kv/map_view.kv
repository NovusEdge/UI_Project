#: include kv/settings_view.kv
<BaseMDNavigationItem>
    MDNavigationItemIcon:
        icon: root.icon

    MDNavigationItemLabel:
        text: root.text

MDBoxLayout:
    orientation: "vertical"

    

    MDScreenManager:
        id: screen_manager
        
        MDScreen:
            name: "Map"


            MDNavigationRail:
                type: "selected"
                id: nav_rail
                size_hint_x : 0.22
                pos_hint: {"top": .93}

                MDNavigationRailFabButton:
                    icon: "home"

            MDTopAppBar:
                type: "small"
                size_hint_x: 1
                pos_hint: {"center_x": .5, "top": 1}

                MDTopAppBarLeadingButtonContainer:

                    MDActionTopAppBarButton:
                        icon: "menu"
                        on_release: app.toggle_nav_rail()

                MDTopAppBarTitle:
                    pos_hint: {"center_x": 1}
                    text: "                           Lahti                           "

                MDTopAppBarTrailingButtonContainer:

                    MDActionTopAppBarButton:
                        icon: "account-circle-outline"

            MapView:
                size_hint_x: 0.78 if app.rail_visible else 1
                pos_hint: {"right": 1, "top": .93}
                lat: 60.9827 
                lon: 25.6612 
                zoom: 15
                
                MapMarker:
                    lat: 60.983542
                    lon: 25.663951
                    source: "assets/my_location.png"

                MapMarker:
                    lat: 60.98229
                    lon: 25.654719
                    source: "assets/friend.png"


        MDScreen:
            name: "Menu"
            MDLabel:
                text: "Menu"

        MDScreen:
            name: 'Friends'
            SettingsScreen:
                name: "Friends"


    BaseMDNavigationBar:
        on_switch_tabs: app.on_switch_tabs(*args)

        BaseMDNavigationItem:
            icon: "menu"
            text: "Menu"

        BaseMDNavigationItem:
            icon: "map-marker"
            text: "Map"
            active: True

        BaseMDNavigationItem:
            icon: "account-group"
            text: "Friends"
